from building import *
import rtconfig

# get current directory
cwd     = GetCurrentDir()
# The set of source files associated with this SConscript file.
src     = Glob('src/TM16xx.cpp')

path    = [cwd + '/']
path   += [cwd + '/src']

LOCAL_CCFLAGS = ''

if GetDepend('TM16XX_USING_TM1652_DRIVER'):
    src    += Glob('src/TM1652.cpp')

if rtconfig.CROSS_TOOL == 'gcc':
    LOCAL_CCFLAGS += ' -std=c99'

group = DefineGroup('CFF/TM16xx', src, depend = ['EXT_USING_TM16XX_LIBRARY'], CPPPATH = path, LOCAL_CCFLAGS = LOCAL_CCFLAGS)

Return('group')
